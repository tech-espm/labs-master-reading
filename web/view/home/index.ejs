    <script>
        $(function () {
            $(".arrow").on("click", function (event) {
                event.preventDefault();
                var target = $(event.target);
                var active = target.parent().find("div").not(".d-none");
                var nextActive;

                if (target.hasClass("left")) {
                    nextActive = active.prev('div');
                } else {
                    nextActive = active.next('div');
                }

                if (!nextActive.length) {
                    return;
                }

                active.addClass("d-none");
                nextActive.removeClass("d-none");
            });
        }); 
    </script>

