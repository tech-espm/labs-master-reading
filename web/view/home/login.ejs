<!DOCTYPE html>
<html>

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>
    <!-- Bootstrap 3 -->
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
	<!-- <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> -->
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>
    
</head>

<style type="text/css">
body {
    background-image: url('/assets/images/login-bg.svg');
    background-repeat: no-repeat;
    background-size: cover;
}

</style>

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="panel panel-default" style="margin-top: 100px;">
                    <div class="panel-heading">
                        <h1 class="panel-title">Login</h1>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="master">Usu√°rio</label><br>
                            <input type="text" name="username" class="username form-control">
                        </div>
                        <div class="form-group">
                            <label for="master">Senha</label><br>
                            <input type="password" name="password" class="password form-control">
                        </div>
                    </div>
                    <div class="panel-footer">
                        <input type="submit" class="login btn btn-primary" value="Login">
                    </div>

                </div>


            </div>
        </div>
    </div>



    <script>
        $(document).ready(() => {
            $('.login').click(() => {
                let username = $('.username').val();
                let password = $('.password').val();
                let basicAuth = btoa(`${username}:${password}`);

                $.ajax({
                    method: 'POST',
                    url: '/api/login',
                    headers: {
                        'Authorization': `Basic ${basicAuth}`
                    }
                }).then(result => {
                    console.log(result);
                })
            });
        });
    </script>
</body>

</html>